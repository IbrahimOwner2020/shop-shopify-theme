{% render 'header' with {
    settings: section.settings
}%}

{% schema %}
    {
        "name": "Header",
        "settings": [
            {
                "type": "color",
                "id": "nav_backgroundColor",
                "label": "Navigation Background",
                "default": "#ffffff"
            },
            {
                "type": "image_picker",
                "id": "logo_image",
                "label": "Shop Logo",
                "info": "Svg images are recommended"
            },
            {
                "type": "range",
                "id": "logo_width",
                "min": 50,
                "max": 300,
                "step": 5,
                "unit": "px",
                "label": "Logo width",
                "default": 100
            }
        ]
    }
{% endschema %}
